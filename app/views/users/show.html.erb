<div class="container">
	<div class="row">
		<% if @book.errors.any?%>
		<div id ="error_explanation">
		<h2 style="color:red;"><%= @book.errors.count %>error</h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li style ="color: red;"><%= message %></li>
			<% end %>
		</ul>
		</div>
	<% end %>

	<div class="col-xs-3">
		<h2>User info</h2>
			<%= render 'users/profile', user: @user %>
		<!--同コントローラーのviewで表示ならusersは省略可 -->
		<% if current_user != @user%>
			<% if @user.followed_by?(current_user)%>
				<p><%= link_to "フォロー外す",user_relationships_path(@user.id),method: :delete, class: "col-xs-12 btn btn-success",style: "margin: 10px 0;"%></p>
			<% else %>
				<P><%= link_to "フォローする",user_relationships_path(@user.id),method: :post, class: "col-xs-12 btn btn-success",style: "margin: 10px 0;" %></P>
			<% end %>
		<% end %>
		<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<td>
							<% if book.favorited_by?(current_user)%>
							<!-- destroyアクション -->
								<%= link_to book_favorites_path(book), method: :delete do %>
									<i class = "fa fa-heart" aria-hidden = "ture" style ="color: red;"></i>
									<%= book.favorites.count%>
								<% end %>
							<% else %>
								<!-- createアクション Font awesomeを使っている　link_toのhttpメソッドはgetなので他のメソッドにしたい場合は
									method: :delete method: :postを書く必要がある。
									また、リンク先を指定しmethodを指定することでdestroyアクションdeleteアクションの区別ができる-->
								<%= link_to book_favorites_path(book), method: :post do %>
      								<i class="fa fa-heart" aria-hidden="true"></i>
      								<%= book.favorites.count %>
      							<% end %>
      						<% end %>
						</td>
						<td>コメント数:<%= "#{book.book_comments.count}"%></td>
						<!-- each文に基づいたbookのbook_comments -->
					</tr>
					<% end %>
				</tbody>
			</table>
		<!--books一覧 -->
		</div>
	</div>
</div>

